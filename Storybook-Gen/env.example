# Copy this file to .env and fill in your values

# Required: Your OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Output directory (defaults to "outputs")
OUTPUT_DIR=outputs

# Optional: Text model for story generation (defaults to "gpt-5-mini")
TEXT_MODEL=gpt-5-mini

# Optional: Image model for cover and page generation (defaults to "gpt-image-1")
IMAGE_MODEL=gpt-image-1

# Optional: Number of pages in the storybook (defaults to 6, range 6-24)
PAGE_COUNT=6

# Optional: Image size for generated images (defaults to "1024x1536")
IMAGE_SIZE=1024x1536 